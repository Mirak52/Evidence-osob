<Window x:Class="Evidence_osob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evidence_osob"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>

        <Label x:Name="Content" Content="Label" Margin="10,10,518,825"/>

        <ListView Margin="0,20,850,0" Name="People">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="200" DisplayMemberBinding="{Binding IdList}" />
                    <GridViewColumn Header="Jméno" Width="100" DisplayMemberBinding="{Binding NameList}" />
                    <GridViewColumn Header="Příjmení" Width="550" DisplayMemberBinding="{Binding SurnameList}" />
                    <GridViewColumn Header="Rodné číslo" Width="550" DisplayMemberBinding="{Binding PersonalNumberList}" />
                    <GridViewColumn Header="Datum narození" Width="550" DisplayMemberBinding="{Binding DateOfBirthList}" />
                    <GridViewColumn Header="Pohlaví" Width="550" DisplayMemberBinding="{Binding SexList}" />
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
